import React from 'react';
import { Link, useSearchParams } from 'react-router-dom';

function VerificationResultPage() {
  const [searchParams] = useSearchParams();
  const isSuccess = searchParams.get('success') !== 'false'; // Domyślnie sukces, chyba że jest 'false'

  return (
    <div style={{ textAlign: 'center', padding: '50px', maxWidth: '600px', margin: '2rem auto', border: '1px solid #eee', borderRadius: '8px' }}>
      {isSuccess ? (
        <>
          <h1 style={{color: 'green'}}>Weryfikacja udana!</h1>
          <p>Twoje konto jest już aktywne. Możesz się teraz zalogować.</p>
          <Link to="/login" style={{marginTop: '20px', display: 'inline-block'}}>Przejdź do logowania</Link>
        </>
      ) : (
        <>
          <h1 style={{color: 'red'}}>Wystąpił błąd</h1>
          <p>Link weryfikacyjny jest nieprawidłowy lub wygasł. Spróbuj zarejestrować się ponownie lub skontaktuj się z pomocą techniczną.</p>
          <Link to="/register" style={{marginTop: '20px', display: 'inline-block'}}>Wróć do rejestracji</Link>
        </>
      )}
    </div>
  );
}

export default VerificationResultPage;
